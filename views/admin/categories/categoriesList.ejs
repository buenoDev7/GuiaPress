<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories List</title>
    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"
        defer></script>
    <!-- Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/categoriesList.css">
    <!-- Favicon -->
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
</head>

<body class="bg-dark">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark text-white border-1 border-bottom border-light">
        <div class="container-fluid py-2">
            <a href="/" class="lead fs-4 ms-3 nav-link fw-light">
                <i class="bi bi-house text-white pe-1 fs-4"></i> GuiaPress
            </a>
        </div>
    </nav>
    <div class="container text-light mt-3">
        <h2 class="text-center pt-5 display-5">Categories</h2>
        <hr class="text-white w-50 mx-auto">
        <br><br>
        <table class="table table-dark table-hover table-bordered">
            <div class="thead">
                <tr>
                    <th class="text-success">ID</th>
                    <th class="text-success">Category Name</th>
                    <th class="text-success">Slug</th>
                    <th class="text-success">Actions</th>
                </tr>
            </div>
            <div class="tbody">
                <% categories.forEach(category => { %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.categoryName %></th>
                        <th><%= category.slug %></th>
                    </tr>
                <% }) %>
            </div>
        </table>
    </div>
</body>

</html>