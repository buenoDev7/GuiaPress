<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories List</title>
    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"
        defer></script>
    <!-- Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/categoriesList.css">
    <!-- JS -->
    <script src="/js/deleteCategory.js"></script>
    <!-- Favicon -->
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
</head>

<body class="bg-dark">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark text-white border-1 border-bottom border-light">
        <div class="container-fluid py-2">
            <a href="/" class="lead fs-4 ms-3 nav-link fw-light">
                <i class="bi bi-house text-white pe-1 fs-4"></i> GuiaPress
            </a>

            <a href="/admin/categories/new" class="bi bi-plus-circle fs-5 nav-link ms-auto pe-2"
                title="Add new Category">
                <span class="text-white pe-3 fs-5">New Category </span>
            </a>
        </div>
    </nav>
    <!-- Navbar -->

    <div class="container text-light mt-3">
        <h2 class="text-center pt-5 display-5">Categories</h2>
        <hr class="text-white w-50 mx-auto">
        <br><br>
        <table class="table table-dark table-hover table-bordered text-center">
            <div class="thead">
                <tr>
                    <th class="text-success col-1">ID</th>
                    <th class="text-success col">Name</th>
                    <th class="text-success col">Slug</th>
                    <th class="text-success col-1">Actions</th>
                </tr>
            </div>
            <div class="tbody">
                <% categories.forEach(category=> { %>
                    <tr>
                        <th>
                            <%= category.id %>
                        </th>
                        <th>
                            <%= category.categoryName %>
                        </th>
                        <th>
                            <%= category.slug %>
                        </th>
                        <th>
                            <button class="btn btn-danger p-0 bg-transparent border-0 mt-3 mt-md-0">
                                <i class="bi bi-pencil pe-2" title="Edit"></i>
                            </button>

                            <form action="/categories/delete" method="POST" class="d-inline" onsubmit="return confirmDelete()">
                                <input type="hidden" name="idCategory" value="<%= category.id %>">
                                <input type="hidden" name="categoryName" value="<%= category.categoryName %>">
                                <button class="btn btn-danger p-0 bg-transparent border-0 mt-3 mt-md-0">
                                    <i class="bi bi-trash" title="Delete"></i>
                                </button>
                            </form>
                        </th>
                    </tr>
                    <% }) %>
            </div>
        </table>
    </div>
</body>

</html>